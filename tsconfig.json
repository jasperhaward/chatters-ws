{
    "compilerOptions": {
        "strict": true,
        "target": "ES2022",
        "lib": ["ES2022", "DOM"],
        "module": "ES2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "noEmitOnError": true,
        "rootDir": ".",
        "outDir": "dist"
    },
    "include": ["src", "types", "node"]
}
